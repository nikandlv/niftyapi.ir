header 
 width 100%
 height 100%
 background-color white
 box-sizing: border-box
 border-radius: 2rem
 padding: 2rem
 .title
     font-size: 10vw
     text-align: center
     background #FF512F
     background -webkit-linear-gradient(to left, #F09819, #FF512F)
     background linear-gradient(to left, #F09819, #FF512F)
